<%= form_for @book_content, :html => { :class => "form-horizontal book_content" } do |f| %>

  <% if @book_content.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@book_content.errors.count, "error") %> prohibited this book_content from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @book_content.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :book_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :book_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_name) %>
  </div>
  <div class="form-group">
    <%= f.label :book_content, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :book_content, :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_content) %>
  </div>
  <div class="form-group">
    <%= f.label :book_chapter, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :book_chapter, :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_chapter) %>
  </div>
  <div class="form-group">
    <%= f.label :book_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :book_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                book_contents_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
