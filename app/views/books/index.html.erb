<%- model_class = Book -%>
<div class="page-header">
  <h1>书籍列表</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>书籍编号</th>
      <th>书籍名称</th>
      <th>书籍价格</th>
      <th>书籍简介</th>
      <th>书籍分类</th>
      <th>电子书地址</th>
      <th>书籍图片</th>
      <th>书籍作者</th>
      <th>可操作</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.id, book_path(book) %></td>
        <td><%= book.name %></td>
        <td><%= book.price %></td>
        <td><%= book.description %></td>
        <td><%= book.types %></td>
        <td><a href ="<%= book.url %>">下载</a></td>
        <td>
        <% if book.picture? %>
        <%= image_tag(book.picture, :height => '45', :width => 'auto')  %>
         <% else %>
         <%= image_tag('/default.jpg', :height => '45', :width => 'auto')  %>
        <% end %>
        </td>
        <td><%= book.author %></td>
        <td>
          <%= link_to "详情",
                      book_path(book), :class => 'btn btn-default btn-xs' %>
          <%= link_to "编辑",
                      edit_book_path(book), :class => 'btn btn-default btn-xs' %>
          <%= link_to "删除",
                      book_path(book),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除？')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新增",
            new_book_path,
            :class => 'btn btn-success' %>
