<%- model_class = ReadLog -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:reader) %></th>
      <th><%= model_class.human_attribute_name(:read_book) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @read_logs.each do |read_log| %>
      <tr>
        <td><%= link_to read_log.id, read_log_path(read_log) %></td>
        <td><%= read_log.reader %></td>
        <td><%= read_log.read_book %></td>
        <td><%=l read_log.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      read_log_path(read_log), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_read_log_path(read_log), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      read_log_path(read_log),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_read_log_path,
            :class => 'btn btn-primary' %>
