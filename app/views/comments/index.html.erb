<%- model_class = Comment -%>
<div class="page-header">
  <h1>评论列表</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>书籍名称</th>
      <th>书籍评分</th>
      <th>书籍评论</th>
      <th>评论人</th>
      <th>评论时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.name %></td>
        <td><%= comment.score %></td>
        <td><%= comment.comment %></td>
        <td><%= comment.user_name %></td>
        <td><%=l comment.created_at %></td>
        <td>
          <%= link_to "更新",
                      edit_comment_path(comment), :class => 'btn btn-default btn-xs' %>
          <%= link_to "删除",
                      comment_path(comment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除？')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

