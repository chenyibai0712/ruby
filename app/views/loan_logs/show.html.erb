<%- model_class = LoanLog -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:book_name) %>:</strong></dt>
  <dd><%= @loan_log.book_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:loaner_name) %>:</strong></dt>
  <dd><%= @loan_log.loaner_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:loan_status) %>:</strong></dt>
  <dd><%= @loan_log.loan_status %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              loan_logs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_loan_log_path(@loan_log), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              loan_log_path(@loan_log),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
